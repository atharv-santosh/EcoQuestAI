{
  "expo": {
    "name": "EcoQuestAI",
    "shortName": "EcoQuest",
    "slug": "ecoquestai",
    "description": "EcoQuestAI: Discover, explore, and protect the environment with quests, badges, and Google login.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "ecoquestai",
